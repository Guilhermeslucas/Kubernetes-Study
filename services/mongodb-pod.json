{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "mongodb",
        "labels": {
            "app": "mongodb",
            "version": "v1"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "mongodb",
                "image": "mongo:3.5",
                "ports": [{
                    "containerPort": 27017
                }]
            }
        ]
    }
}